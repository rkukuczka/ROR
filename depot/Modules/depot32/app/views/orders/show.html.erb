<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

<p>
  <h2>Details:</h2>
  <% @order.line_items.each do |item| %>
    <ul>
      <li>
        <%= item.product.title %>&nbsp;<%= number_to_currency(item.price) %>
      </li>
    </ul>
<% end %>
</p>


<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
