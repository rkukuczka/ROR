<div class="depot_form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>
</div>

<%= form_tag do %>
    <fieldset>
      <legend>Please Log-in</legend>

      <div class="field">
        <%= label_tag :name, "Name:" %>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div class="field">
        <%= label_tag :password, "Pass:" %>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div>
        <%= submit_tag "Login" %>
      </div>

    </fieldset>
<% end %>