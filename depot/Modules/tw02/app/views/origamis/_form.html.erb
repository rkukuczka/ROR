<%= semantic_form_for @origami do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
        <%= f.input :name,   :hint => "Enter the origami artwork's name" %>
        <%= f.input :author, :hint => "Enter the origami artist's name" %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
    <% end %>
<% end %>
